        <menus>
          <Menu mnemonicParsing="false" text="Curso">
            <items>
                  <MenuItem fx:id="menuItemCurso" mnemonicParsing="false" onAction="#onActionMenuItemNuevo" text="Nuevo" />
              <MenuItem mnemonicParsing="false" onAction="#onActionMenuItemMatricula" text="Matricula" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Alumnos">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onActionMenuItemTablaAlumnos" text="Vista Tabular" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox alignment="CENTER_RIGHT" layoutX="14.0" layoutY="28.0" prefHeight="41.0" prefWidth="602.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="50.0">
         <children>
            <Button mnemonicParsing="false" onAction="#cambiarModo">
               <graphic>
                  <ImageView fx:id="imagenModo" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/night-mode.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
               </graphic>
               <styleClass>
                  <String fx:value="round-border" />
                  <String fx:value="secondary-color" />
               </styleClass>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
