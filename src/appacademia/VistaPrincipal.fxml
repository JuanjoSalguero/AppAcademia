<AnchorPane id="AnchorPane" fx:id="rootVistaPrincipal" prefHeight="400.0" prefWidth="602.0" styleClass="primary-color" stylesheets="@../styles/lightMode.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appacademia.VistaPrincipalController">
